generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"  
}

model User {
  id          Int      @id @default(autoincrement())
  nickname    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownedRooms  Room[]
  userRooms   RoomUser[]
}

model Room {
  id        Int          @id @default(autoincrement())
  ownerId   Int
  owner     User         @relation(fields: [ownerId], references: [id])
  createdAt DateTime     @default(now())
  maxUsers  Int
  users     RoomUser[]   
  isPublic  Boolean      @default(true)
  password  String?
  autoDeleteIfEmpty Boolean  @default(false)  
}

model RoomUser {
  id        Int      @id @default(autoincrement())
  roomId    Int 
  userId    Int
  joinedAt  DateTime @default(now())

  room      Room     @relation(fields: [roomId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  messages Message[]

  @@unique([roomId, userId])  
}

model Message {
  id          Int      @id @default(autoincrement())
  content     String
  createdAt   DateTime @default(now())
  roomUserId  Int
  roomAuthor  RoomUser @relation(fields: [roomUserId], references: [id])
}