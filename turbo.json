{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "check-types": {   
            "dependsOn": ["^check-types"],
            "outputs": []
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputs": []
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}